<div class="row">
	<h3 class="center-align"><%= @course.short_name %></h3>
</div>

<div class="row">
  <div class="container">
    <div class="col s12 m12">
      <div class="card-panel">
        <h5 class="center-align"><%= @course.name %></h5>
          <div class="card-content">
            <p><%= @course.description %></p>
          </div>
          <% if current_user.admin? %>
            <div class="card-action link-css center-align">
              <%= link_to "Edit", edit_course_path, class: "btn" %>
              <%= link_to "Delete", course_path(@course), method: :delete, data: { confirm: "Are you sure?" }, class: "red btn" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

            
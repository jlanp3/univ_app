<div class="container">
	<div class="row center sign-up-form">
		<div class="col s12 m12 l12">
			<div class="card-panel">
				<h3 class="center-align">Login!</h3>
				<div class="row">
					<%= form_for(:logins, html: {class: "col s12", role: 'form'}, url: login_path) do |f| %>
						<div class="row">
							<div class="input-field col s12">
								<%= f.email_field :email, autofocus: true %>
								<%= f.label :email %>
								<span class="helper-text" data-error="wrong" data-success="right">Enter Email</span>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<%= f.password_field :password, autocomple: false %>
								<%= f.label :password %>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<%= f.button '<i class="material-icons right">arrow_forward</i>Signup!'.html_safe, class: "waves-effect waves-light btn center" %>
								<%= link_to "Cancel", root_path, class: "waves-effect waves-light red btn center" %>
							</div>
						</div>
					<% end %> 
				</div>
			</div>
		</div>
	</div>
</div>
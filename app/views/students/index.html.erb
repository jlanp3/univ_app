<div class="row">
	<h3 class="center-align">Students Directory</h3>
</div>
<div class="row">
	<% @students.each do |student| %>
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= student.name %></span>
        <p>Email: <%= student.email %></p>
        <p>Course Enrollments: None</p>
      </div>
      <div class="card-action">
        <a href="#">View Profile</a>
				<%= link_to "delete Profile", student_path(student), method: :delete, 
                                          data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
	<% end %>
</div>

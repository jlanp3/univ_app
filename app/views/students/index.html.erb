<div class="row">
	<h3 class="center-align">Students Directory</h3>
</div>
<div class="row">
	<% @students.each do |student| %>
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= student.name %></span>
        <p>Email: <%= student.email %></p>
        <p>Course Enrollments:
          <% if student.courses.empty? %>
            None
          <% else %>
            <%= student.courses.count %>
          <% end %>
        </p>
      </div>
      <div class="card-action">
          <%= link_to "View Profile", student_path(student) %>
        <% if current_user.admin? %>
  				<%= link_to "delete Profile", student_path(student), method: :delete, 
                                          data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  </div>
	<% end %>
</div>

<div class="row center">
  <%= will_paginate @students %>
</div>

<div class="container">
	<div class="row center sign-up-form">
		<div class="col s12 m12 l12">
			<div class="card-panel">
				<% if @student.new_record? %>
					<h3 class="center-align">Sign up!</h3>
				<% else %>
					<h3 class="center-align">Edit</h3>
				<% end %>
				<div class="row">
					<%= form_for(@student, html: {class: "col s12"}) do |f| %>
						<div class="row">
							<div class="input-field col s12">
								<%= f.text_field :name, placeholder: "Enter your full name", autofocus: true, id: "first_name", class: "validate" %>
								<%= f.label :name, for: "first_name" %>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<%= f.email_field :email, placeholder: "Enter your email", class: "validate" %>
								<%= f.label :email %>
								<span class="helper-text" data-error="wrong" data-success="right">Enter Email</span>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<%= f.submit(@student.new_record? ? "Signup!" : "Update", class: "waves-effect waves-light btn center") %>
								<%= link_to "Cancel", root_path, class: "waves-effect waves-light red btn center" %>
							</div>
						</div>
					<% end %> 
				</div>
			</div>
		</div>
	</div>
</div>

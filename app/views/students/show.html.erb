<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <p>Email: <%= @student.email %></p>
        <p>Courses Enrollment:
          <% if @student.courses.empty? %>
            None
          <% else %>
            <ul>
              <% @student.courses.each do |course| %>
                <li> - <%= link_to "#{course.name}", course_path(course) %></li>
              <% end %>
            </ul>
          <% end %>
        </p> 
      </div>
    </div>
    <div class="center">
      <% if current_user == @student %>
        <%= link_to '<i class="material-icons right">edit</i>Edit Profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
      <% end %>
    </div>
  </div>
</div>




